<%= form_for(@story) do |f| %>
<% if @story.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@story.errors.count, "error") %> 	prohibited this story from being saved:</h2>

	<ul>
		<% @story.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<%= f.label :name %><br>
	<%= f.text_field :name %>
</div>

<div class="field">
	<% if current_user %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<% end %>
</div>

<div class="field">
	<%= f.label :town %><br>
	<%= f.text_field :town %>
</div>

<div class="field">
	<%= f.label :region %><br>
	<%= f.text_field :region %>
</div>

<div class="field">
	<%= f.label :country %><br>
	<%= f.text_field :country %>
</div>

<div class="field">
	<%= f.label :body %><br>
	<%= f.text_area :body %>
</div>

<div class="actions">
	<%= f.submit %>
</div>
<% end %>
