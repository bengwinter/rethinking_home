<% form_for @comment do|f| %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>
 
<div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
</div>

  <%#= f.error_messages %>
  <%= f.hidden_field :story_id, :value => @story_id %>
 
<div class="actions">
    <%= f.submit "Post Comment" %>
</div>
<% end %>